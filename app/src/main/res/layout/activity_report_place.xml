<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/reportactivity_topbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blackColor">
        <ImageView
            android:id="@+id/reportactivity_backbutton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_leftarrow_white"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true">
        <RadioButton
            android:id="@+id/reportactivity_radio_apartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apartment"/>
        <RadioButton
            android:id="@+id/reportactivity_radio_entirebuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entire building"/>
        <RadioButton
            android:id="@+id/reportactivity_radio_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groundfloor house"/>
        <RadioButton
            android:id="@+id/reportactivity_radio_officetower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Office tower"/>
        <RadioButton
            android:id="@+id/reportactivity_radio_forestarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forest area"/>
        <RadioButton
            android:id="@+id/reportactivity_radio_farmarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farm area"/>
        <RadioButton
            android:id="@+id/reportactivity_radio_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reportactivity_topbar"
        android:text="What Is Burning?"
        android:textColor="@color/blackColor"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/reportactivity_nextbutton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Next"/>

</RelativeLayout>