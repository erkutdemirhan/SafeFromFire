<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/weatherforecast_topbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blackColor">
        <ImageView
            android:id="@+id/weatherforecast_backbutton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_leftarrow_white"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_below="@id/weatherforecast_topbar"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Weather Stats"
            android:textColor="@color/blackColor"/>
        <TextView
            android:id="@+id/weatherforecast_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Location: -"/>
        <TextView
            android:id="@+id/weatherforecast_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Temperature: -"/>
        <TextView
            android:id="@+id/weatherforecast_wind_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Wind direction: -"/>
        <TextView
            android:id="@+id/weatherforecast_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Humidity: -"/>
        <TextView
            android:id="@+id/weatherforecast_rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Rain: -"/>
        <TextView
            android:id="@+id/weatherforecast_probability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Probability of fire near your location based on weather stats: LOW"
            android:textColor="@color/blackColor"/>
        <TextView
            android:id="@+id/weatherforecast_firemap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Click here to see interactive fire map"
            android:textColor="@color/blueColor"/>
    </LinearLayout>
</RelativeLayout>